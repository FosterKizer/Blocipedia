<div class="row">
  <div class="col s8 offset-s2">
    
    <br /><h4 class="center-align">My wikis</h4><br />
    
    <table class="bordered hoverable">
      <tbody>
        <% @wikis.each do |wiki| %>
          <tr>
            <td><%= link_to wiki.title, wiki_path(wiki.id) %></td>
            <td class="right-align"><%= link_to "Edit", edit_wiki_path(wiki), class: 'black-text' %></td>
            <td class="center-align"><%= link_to "Delete", wiki, method: :delete, class: 'red-text', data: {confirm: 'Are you sure you want to delete this Wiki?'} %></td>
          </tr>
        <% end %>  
      </tbody>
    </table><br /><br />
    
    <% if @collaborations.present? %>
      <h4 class="center-align">Wikis I collaborate on</h4><br />
      <table class="bordered hoverable">
        <tbody>
          <% @collaborations.each do |wiki| %>
            <tr>
              <td><%= link_to wiki.title, wiki_path(wiki.id) %></td>
              <td class="right-align"><%= link_to "Edit", edit_wiki_path(wiki), class: 'black-text' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
            </tr>
          <% end %>  
        </tbody>
      </table><br /><br />
    <% end %>
    
    <div class="center-align">
      <%= link_to "New Wiki", new_user_wiki_path(@user, @wiki), class: 'btn grey darken-1' %>
    </div>
    
  </div>
</div>
