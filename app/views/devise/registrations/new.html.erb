<div class="row">
  <div class="col s8 offset-s2">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
      <h4>Sign up</h4><br />
    
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, placeholder: "Enter Name" %>
      </div><br />
    
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: "Enter Email" %>
      </div><br />

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Enter Password" %>
      </div><br />

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placholder: "Confirm Password" %>
      </div><br />

      <div class="actions">
        <%= f.submit "Sign up", class: 'btn grey darken-1' %>
      </div><br />

      <div class="field">
        <%= render "devise/shared/links" %>
      </div>
    
    <% end %>
  </div>
</div>