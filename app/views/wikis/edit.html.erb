<div class="row">
  <div class="col s8 offset-s2">
    
    <h4 class="center-align">Editing <%= markdown_to_html @wiki.title %></h4>
    
    <%= form_for [@wiki] do |f| %>
    
      <div class="field">
        <%= f.label :title, autofocus: true %>
        <%= f.text_field :title %>
      </div><br />
    
      <div class="field">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'materialize-textarea', id: 'textarea1' %>
      </div><br />
    
      <div class="field center-align">
        <%= f.submit "Save", class: 'btn grey darken-1' %>
      </div><br /><br />
    
    <% end %>  
  </div>
  
  <% if @user.role == 'premium' %>
    <div class="col s2"><br />
      <h6>Add collaborators?</h6><br />
      <%= link_to "Collaborators", new_wiki_collaborator_path(@wiki, @collaborator), class: 'btn grey darken-1' %>
    </div>
  <% end %>
  
</div>
