<div class="row">
  <div class="col s8 offset-s2">
    
    <h4 class="center-align">Add Collaborators to <%= @wiki.title %></h4><br />
    
    <%= form_for @wiki do |f| %>
      <div class="field">
        <%= f.label :user_ids, "Collaborators" %>
        <%= f.collection_select :user_ids, @users, :id, :name,{ include_blank: true }, { multiple: true, class: "browser-default" } %>
      </div><br />
    
      <div class="field center-align">
        <%= f.submit "Save", class: 'btn grey darken-1' %>
      </div>
    
    <% end %>
    
  </div>
</div>